<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="667.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teamap_ecopay.Controllers.Forms.CarbonTrackingControllerForm">
   <children>
      <HBox layoutY="65.0" prefHeight="276.0" prefWidth="375.0">
         <children>
            <VBox prefHeight="267.0" prefWidth="209.0">
               <children>
                  <Label text="Carbon Footprint Tracker" />
                  <Label style="-fx-padding: 10px;" text="Transport" />
                  <ComboBox fx:id="TransportType" prefWidth="150.0" promptText="Select" />
                  <TextField fx:id="EnterDistance" promptText="Enter distance (km)" />
                  <TextField fx:id="EnterTime" promptText="Enter time taken (mins)" />
                  <Button mnemonicParsing="false" onAction="#addTransportEmissions" text="Add Transport Emissions" />
                  <Label fx:id="transportResult" text="transport result" />
                  <Label style="-fx-padding: 10;" text="Utilities" />
                  <ComboBox fx:id="UtilityType" prefWidth="150.0" promptText="Select" />
                  <TextField fx:id="EnterServingSize" promptText="Enter kWh" />
                  <Button mnemonicParsing="false" onAction="#addUtilityEmissions" text="Add Utility Emissions" />
                  <Label fx:id="utilitiesResult" text="util result" />
                  <Label style="-fx-padding: 10;" text="Food" />
                  <ComboBox fx:id="FoodType" prefWidth="150.0" promptText="Select" />
                  <TextField fx:id="EnterFoodPrice" promptText="Enter price (MYR)" />
                  <Button mnemonicParsing="false" onAction="#addFoodEmissions" text="Add Food Emissions" />
                  <Label fx:id="foodUtilities" text="food result" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
